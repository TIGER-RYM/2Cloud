<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jirachi Cardshop</title>
  <!-- Bootstrap CDN for styling -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>

  <!-- Header & Navigation -->
  <header class="bg-white">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand text-teal font-weight-bold jirachi" href="/">JIRACHI CARDSHOP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link text-teal" href="/card">Cards</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-teal" href="/collection">Collections</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-teal" href="/contact">Contact</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </header>
  
  <!-- Banner Section -->
  <section class="banner">
    <div class="container">
      <img src="/images/banner1.jpg" alt="Banner Image 1" class="banner-image">
    </div>
  </section>

  <!-- Logos Section -->
  <section class="logos">
    <div class="container">
      <div class="logo-marquee">
        <img src="/images/logo1.png" alt="Logo 1" class="logo">
        <img src="/images/logo2.png" alt="Logo 2" class="logo">
        <img src="/images/logo3.png" alt="Logo 3" class="logo">
        <img src="/images/logo4.png" alt="Logo 4" class="logo">
        <img src="/images/logo5.png" alt="Logo 5" class="logo">
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <!-- Scrollable Cards Section -->
<section class="scrollable-cards">
    <div class="container">
      <div class="card-wrapper">
        <div class="card">
          <img src="/images/card1.png" alt="Card 1">
          <p>PSA 10 Charizard ex SAR</p>
          <p>$550</p>
        </div>
        <div class="card">
          <img src="/images/card2.png" alt="Card 2">
          <p>PSA 10 Blastoise ex SAR</p>
          <p>$200</p>
        </div>
        <div class="card">
          <img src="/images/card3.png" alt="Card 3">
          <p>PSA 10 Venusaur ex SAR</p>
          <p>$185</p>
        </div>
        <div class="card">
          <img src="/images/card4.png" alt="Card 4">
          <p>PSA 10 Charizard ex SAR sv4a</p>
          <p>$300</p>
        </div>
        <div class="card">
          <img src="/images/card5.png" alt="Card 5">
          <p>PSA 10 Master Ball Pikachu 151</p>
          <p>$550</p>
        </div>
      </div>
    </div>
  </section>
  <!-- Footer -->
  <footer>
    <div class="container">
      <p>&copy; 2025 2Cloud @ Blackburn. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
